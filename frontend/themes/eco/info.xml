<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>Eco</name>
	<version>1.0.0</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Eco is theme for Fork CMS designed by Veerle Pieters.
		]]>
	</description>
	<authors>
		<author>
			<name>Thomas Deceuninck - frontend</name>
			<url>http://www.thomasdeceuninck.be</url>
		</author>
		<author>
			<name>Veerle Pieters - design</name>
			<url>http://veerle.duoh.com</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="Default" path="core/layout/templates/default.tpl">
			<positions>
				<position name="top">
					<defaults>
						<widget module="search" action="form" />
					</defaults>
				</position>
				<position name="left" />
				<position name="main" />
			</positions>
			<format>
				[/,/,top],[left,main,main]
			</format>
		</template>
		<template label="Subnavigation" path="core/layout/templates/subnav.tpl">
			<positions>
				<position name="top">
					<defaults>
						<widget module="search" action="form" />
					</defaults>
				</position>
				<position name="left" />
				<position name="main" />
			</positions>
			<format>
				[/,/,top],[/,main,main],[left,main,main]
			</format>
		</template>
		<template label="Home" path="core/layout/templates/home.tpl">
			<positions>
				<position name="top">
					<defaults>
						<widget module="search" action="form" />
					</defaults>
				</position>
				<position name="main" />
				<position name="left" />
				<position name="middle" />
				<position name="right" />
			</positions>
			<format>
				[/,/,top],[main,main,main],[left,middle,right]
			</format>
		</template>
	</templates>
</theme>